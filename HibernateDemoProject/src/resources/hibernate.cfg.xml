<!DOCTYPE hibernate-configuration 
SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernateDemo</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<mapping resource="E:\Next\Source\GitForWindowsRepositories\HibernateDemoProject\src\resources\hibernate.cfg.xml" />
		<mapping resource="E:\Next\Source\GitForWindowsRepositories\HibernateDemoProject\src\resources\Vehicle.hbm.xml" />
	</session-factory>
</hibernate-configuration>
